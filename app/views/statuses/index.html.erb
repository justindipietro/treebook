
<div class="page-header">
<h1>All of the Statuses</h1>
</div>


<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %> 

<% @statuses.each do |status| %>

<div class="status">
<strong><%= status.user.full_name %></strong>
<p><%= status.content %></p>

<div class ="meta">
  <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">
       | <%= link_to "edit", edit_status_path(status) %> |
        <%= link_to "delete", status, medith: :delete, data: { confirm: "are you sure you want to delete?"} %>
</div>

</div>

<% end %>


</br>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

